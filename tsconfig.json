{
  "compilerOptions": {
    /* Core Setup */
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    /* JavaScript + TypeScript Hybrid Support */
    "allowJs": true, // Allow .js files
    "noEmit": true,
    "checkJs": false, // You can set this to true to get type-checking in JS too
    "isolatedModules": true,
    /* Module Resolution & Paths */
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    /* JSX support (optional, if using .tsx or .jsx) */
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.js",
    "components/**/*.ts",
    "components/**/*.tsx",
    "components/**/*.js",
    "lib/**/*.ts",
    "pages/**/*.ts",
    "pages/**/*.js",
    "utils/**/*.ts",
    "utils/**/*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
